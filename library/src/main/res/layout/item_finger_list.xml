<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <TextView
            android:id="@+id/tx_item_finger_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/base_dimen_52"
            android:paddingTop="@dimen/base_dimen_30"
            android:text="指纹一"
            android:textColor="@color/charm_home_lock_scanning_txt" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/base_dimen_2"
            android:layout_below="@+id/tx_item_finger_name"
            android:layout_marginLeft="@dimen/base_dimen_50"
            android:layout_marginTop="@dimen/base_dimen_28"
            android:background="@color/charm_home_lock_line_gray" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/base_dimen_52"
            android:background="@drawable/icon_lock_arrow_back" />
    </RelativeLayout>


</LinearLayout>