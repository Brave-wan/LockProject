<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/base_dimen_10"
        android:paddingLeft="@dimen/base_dimen_30"
        android:paddingRight="@dimen/base_dimen_30"
        android:paddingTop="@dimen/base_dimen_10">

        <ImageView
            android:id="@+id/image_home_manager_head"
            android:layout_width="@dimen/base_dimen_80"
            android:layout_height="@dimen/base_dimen_80"
            android:src="@drawable/icon_infor_5" />

        <TextView
            android:id="@+id/tx_home_manager_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/base_dimen_10"
            android:layout_toRightOf="@+id/image_home_manager_head"
            android:text="金沙水岸 08-15"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tx_home_manager_title"
            android:layout_below="@+id/tx_home_manager_title"
            android:layout_toRightOf="@+id/image_home_manager_head"
            android:text="0个房间" />
        
    </RelativeLayout>


</LinearLayout>