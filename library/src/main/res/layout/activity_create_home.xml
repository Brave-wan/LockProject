<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/default_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/tx_add_room"
        android:background="@color/default_bg"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/base_dimen_20"
            android:background="@color/white"
            android:padding="@dimen/base_dimen_30">

            <TextView
                android:id="@+id/tx_home_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="家庭名称"
                android:textColor="@color/black" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/base_dimen_80"
                android:layout_toRightOf="@+id/tx_home_name"
                android:background="@color/white"
                android:gravity="center|left"
                android:hint="给家庭起给名字吧"
                android:paddingLeft="@dimen/base_dimen_20"
                android:textColor="@color/black"
                android:textSize="14sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/base_dimen_40"
            android:background="@color/white"
            android:padding="@dimen/base_dimen_30">

            <TextView
                android:id="@+id/tx_home_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="手机号"
                android:textColor="@color/black" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/base_dimen_80"
                android:layout_toRightOf="@+id/tx_home_phone"
                android:background="@color/white"
                android:gravity="center|left"
                android:hint="18315058038"
                android:paddingLeft="@dimen/base_dimen_20"
                android:textColor="@color/black"
                android:textSize="14sp" />
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/base_dimen_30"
            android:layout_marginTop="@dimen/base_dimen_20"
            android:text="房间"
            android:textColor="@color/black" />

        <ListView
            android:id="@+id/lv_room_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@null"
            android:listSelector="@color/transparent" />
    </LinearLayout>

    <TextView
        android:id="@+id/tx_add_room"
        android:layout_width="match_parent"
        android:layout_height="@dimen/base_dimen_80"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:gravity="center"
        android:text="添加房间"
        android:textColor="@color/black" />
</RelativeLayout>