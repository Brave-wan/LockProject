<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img_scanning_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/base_dimen_116"
        android:src="@drawable/icon_lock_scanning_code" />

    <TextView
        android:id="@+id/tx_scanning_code_toast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_scanning_code"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/base_dimen_136"
        android:text="@string/charmHome_lock_scanning_code"
        android:textColor="@color/charm_home_lock_scanning_txt" />

    <Button
        android:id="@+id/btn_scanning_code"
        android:layout_width="match_parent"
        android:layout_height="@dimen/base_dimen_88"
        android:layout_below="@+id/tx_scanning_code_toast"
        android:layout_marginLeft="@dimen/base_dimen_80"
        android:layout_marginRight="@dimen/base_dimen_80"
        android:layout_marginTop="@dimen/base_dimen_82"
        android:background="@drawable/shape_lock_scanning_code_btn"
        android:text="@string/charmHome_lock_code_btn"
        android:textColor="@color/charm_home_title" />

</RelativeLayout>