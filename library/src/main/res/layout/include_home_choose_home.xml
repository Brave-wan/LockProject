<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/home_manger_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/home_list"
        android:layout_width="match_parent"
        android:layout_height="@dimen/base_dimen_500"
        android:background="@color/white"
        android:orientation="horizontal">

        <ListView
            android:id="@+id/lv_home_area"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <ListView
            android:id="@+id/lv_home_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />
    </LinearLayout>

    <TextView
        android:id="@+id/tx_home_manager"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/base_dimen_80"
        android:layout_below="@+id/home_list"
        android:layout_centerHorizontal="true"
        android:background="@color/white"
        android:gravity="center"
        android:text="@string/charmHome_home_manager"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/tx_outside"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tx_home_manager"
        android:background="#e0000000" />


</RelativeLayout>